{% extends 'layout/base.twig' %}

{% block body %}
	<main class="main" id="home">
		{% set banner = post.meta('banner') %}
		<section class="banner" style="background-image: url('{{ banner.image.url }}');">
			<div class="wrapper banner__wrapper">
				<h1>{{ banner.title }}</h1>

				<div class="links">
					{% for button in banner.buttons %}
						<a href="{{button.link.url}}">
							{{button.link.title}}
							<div class="icon">
								<svg xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" viewbox="0 0 33.138 33.138">
									<defs>
										<clipPath id="clip-path">
											<rect width="28.821" height="18.043" fill="#fff"/>
										</clipPath>
									</defs>
									<g transform="translate(0 20.38) rotate(-45)">
										<g transform="translate(0 0)" clip-path="url(#clip-path)">
											<path d="M19.883,16.9,26.59,9.7H.672a.676.676,0,0,1,0-1.352H26.59l-6.708-7.2a.675.675,0,0,1,.98-.929l7.772,8.347a.654.654,0,0,1-.034.946l-7.738,8.313a.675.675,0,0,1-.98-.929" transform="translate(0 0)" fill="#fff" fill-rule="evenodd"/>
										</g>
									</g>
								</svg>

							</div>
						</a>
					{% endfor %}
				</div>
			</div>
		</section>

		{% set products = post.meta('products') %}
		<section class="products">
			<div class="wrapper products__wrapper">
				<h2 class="title-section">{{ products.title }}</h2>

				<div class="products__wrapper__list">
					<div class="chev">
						<button class="chevron-prev" aria-label="Précédent">
							<svg class="arrow" xmlns="http://www.w3.org/2000/svg" viewbox="0 0 21.907 13.715">
								<path d="M15.113,12.842l5.1-5.471H.511a.514.514,0,0,1,0-1.027h19.7L15.113.873a.513.513,0,0,1,.745-.706l5.908,6.344a.5.5,0,0,1-.026.719l-5.882,6.319a.513.513,0,0,1-.745-.706" fill="currentColor" fill-rule="evenodd"></path>
							</svg>

						</button>
						<button class="chevron-next" aria-label="Suivant">
							<svg class="arrow" xmlns="http://www.w3.org/2000/svg" viewbox="0 0 21.907 13.715">
								<path d="M15.113,12.842l5.1-5.471H.511a.514.514,0,0,1,0-1.027h19.7L15.113.873a.513.513,0,0,1,.745-.706l5.908,6.344a.5.5,0,0,1-.026.719l-5.882,6.319a.513.513,0,0,1-.745-.706" fill="currentColor" fill-rule="evenodd"></path>
							</svg>
						</button>
					</div>

					<div class="swiper swiper-products products__wrapper__list__swiper">
						<ul class="swiper-wrapper products__wrapper__list__swiper__products">
							{% for product in listProducts %}
								<li class="swiper-slide products__wrapper__list__swiper__products__product">
									<div class="image">
										<img src="{{product.image.url}}" alt="{{product.image.alt}}" width="{{product.image.width}}" height="{{product.image.height}}">
									</div>
									<div class="products__wrapper__list__swiper__products__product__top">
										<h3>{{product.title}}</h3>
										<div class="icon">
											<a href="{{site.url}}/pedidos/#{{product.slug}}">
												<svg fill="none" viewbox="0 0 32 32" xmlns="http://www.w3.org/2000/svg">
													<g stroke="currentColor"><path d="m11 13.25v-2.5c0-3.03757 2.2386-5.5 5-5.5s5 2.46243 5 5.5v2.5" stroke-linecap="round"/><path d="m7.3884 12.9119c.04664-.7928.7032-1.4119 1.49741-1.4119h14.22839c.7942 0 1.4508.6191 1.4974 1.4119l.6402 10.8826c.1182 2.0103-1.4802 3.7055-3.494 3.7055h-11.5156c-2.0138 0-3.61221-1.6952-3.49395-3.7055z"/></g>
												</svg>
											</a>
										</div>
									</div>
									<div class="content">{{product.shortdescription}}</div>

									<a href="{{site.url}}/productos/#{{product.slug}}" class="button-product">
										{{ __('Show more', 'cd')}}
										<svg class="arrow" xmlns="http://www.w3.org/2000/svg" viewbox="0 0 21.907 13.715">
											<path d="M15.113,12.842l5.1-5.471H.511a.514.514,0,0,1,0-1.027h19.7L15.113.873a.513.513,0,0,1,.745-.706l5.908,6.344a.5.5,0,0,1-.026.719l-5.882,6.319a.513.513,0,0,1-.745-.706" fill="currentColor" fill-rule="evenodd"></path>
										</svg>
									</a>
								</li>
							{% endfor %}
						</ul>
					</div>

				</div>
			</div>
		</section>

		{% set service = post.meta('service') %}
		<section class="service">
			<div class="wrapper service__wrapper">
				<div class="content">{{service.description1}}</div>
				<div class="content">{{service.description2}}</div>
			</div>
		</section>


		{% set carbonation = post.meta('carbonation') %}
		<section class="carbonation">
			<div class="wrapper">
				<div class="carbonation__wrapper" style="background-image: url('{{ carbonation.image.url }}');">
					<h2 class="title-section">{{ carbonation.title }}</h2>
					<div class="content">{{carbonation.description}}</div>
					<a href="{{carbonation.link.url}}" class="button-primary" target="{{carbonation.link.target}}">
						{{carbonation.link.title}}
						<div class="icon">
							<svg xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" viewbox="0 0 33.138 33.138">
								<defs>
									<clipPath id="clip-path">
										<rect width="28.821" height="18.043" fill="#fff"/>
									</clipPath>
								</defs>
								<g transform="translate(0 20.38) rotate(-45)">
									<g transform="translate(0 0)" clip-path="url(#clip-path)">
										<path d="M19.883,16.9,26.59,9.7H.672a.676.676,0,0,1,0-1.352H26.59l-6.708-7.2a.675.675,0,0,1,.98-.929l7.772,8.347a.654.654,0,0,1-.034.946l-7.738,8.313a.675.675,0,0,1-.98-.929" transform="translate(0 0)" fill="#fff" fill-rule="evenodd"/>
									</g>
								</g>
							</svg>
						</div>
					</a>
				</div>
			</div>
		</section>


		{% set help = post.meta('help') %}
		<section class="help">
			<div class="wrapper">
				<div class="help__wrapper">
					<div class="help__wrapper__left">
						<h2>{{ help.title }}</h2>
					</div>

					<div class="help__wrapper__right">
						<div class="content">{{help.description}}</div>
						<a href="{{help.link.url}}" class="button-primary" target="{{help.link.target}}">
							{{help.link.title}}
							<div class="icon">
								<svg xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" viewbox="0 0 33.138 33.138">
									<defs>
										<clipPath id="clip-path">
											<rect width="28.821" height="18.043" fill="#fff"/>
										</clipPath>
									</defs>
									<g transform="translate(0 20.38) rotate(-45)">
										<g transform="translate(0 0)" clip-path="url(#clip-path)">
											<path d="M19.883,16.9,26.59,9.7H.672a.676.676,0,0,1,0-1.352H26.59l-6.708-7.2a.675.675,0,0,1,.98-.929l7.772,8.347a.654.654,0,0,1-.034.946l-7.738,8.313a.675.675,0,0,1-.98-.929" transform="translate(0 0)" fill="#fff" fill-rule="evenodd"/>
										</g>
									</g>
								</svg>

							</div>
						</a>
					</div>
				</div>
			</div>
		</section>


		{% set skills = post.meta('skills') %}
		<section class="skills">
			<div class="wrapper skills__wrapper">
				<ul class="skills__wrapper__list">
					{% for skill in skills.skills %}
						<li class="skills__wrapper__list__skill">
							<div class="content">{{skill.description}}</div>
						</li>
					{% endfor %}
				</ul>
			</div>
		</section>
	</main>
{% endblock %}
